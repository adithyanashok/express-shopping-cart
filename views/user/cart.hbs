<section>
    <div class="container">
        <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">Item</th>
                <th scope="col">Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Remove</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
               
                <td><img style="width: 70px; height: 70px;" src="/images/{{this.product._id}}.jpg" alt=""></td>
                <td>{{this.product.Name}}</td>
               
                <td>
                    <button class="btn btn-secondary cart-item-count me-3 " onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)">-</button>{{this.quantity}}<button class="btn btn-secondary cart-item-count ms-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)">+</button>
                    <td>
                        <a class="btn btn-danger" href="">Remove</a>
                    </td>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    </div>
</section>

<script>
    function changeQuantity (cartId, proId, count) {
        $.ajax({
            url:'/change-product-quantity',
            data:{
                cart:cartId,
                product:proId,
                count:count
            },
            method:'post',
            success:(response) => {
                alert(response)
            }
        })
    }
</script>pt